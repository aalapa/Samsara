<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Samsara" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/apple_blue</item>
        <item name="colorPrimaryVariant">@color/apple_blue</item>
        <item name="colorOnPrimary">@color/background_secondary</item>
        <item name="android:statusBarColor">@color/background_light</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="actionMenuTextColor">@color/text_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="popupMenuStyle">@style/PopupMenuStyle</item>
        <item name="popupTheme">@style/PopupMenuTheme</item>
    </style>
    
    <style name="ThemeOverlay.AppCompat.Dark.ActionBar" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="colorControlNormal">@color/text_primary</item>
    </style>
    
    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:popupBackground">@drawable/popup_menu_background</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <style name="PopupMenuTheme" parent="ThemeOverlay.Material3.Light">
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:popupBackground">@drawable/popup_menu_background</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:colorBackground">@color/background_secondary</item>
        <item name="colorSurface">@color/background_secondary</item>
        <item name="colorOnSurface">@color/text_primary</item>
    </style>
</resources>

